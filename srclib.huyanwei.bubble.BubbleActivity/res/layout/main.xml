<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
    

    <RelativeLayout
        android:id="@+id/layout_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top" >

    
    <LinearLayout
        android:id="@+id/hor_level"
        android:layout_width="320dp"
        android:layout_height="wrap_content"        
        android:orientation="horizontal" >

        <srclib.huyanwei.bubble.LevelBalance
            android:id="@+id/hor_level_balance"
            android:layout_width="fill_parent"
            android:layout_height="match_parent">
        </srclib.huyanwei.bubble.LevelBalance>        
        
    </LinearLayout>
    
</RelativeLayout>  

    <LinearLayout
        android:id="@+id/ver_level"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"        
        android:orientation="horizontal" >
                 
        <srclib.huyanwei.bubble.LevelBalance
            android:id="@+id/ver_level_balance"
            android:layout_width="wrap_content"
            android:layout_height="320dp"            
            />
                


        <LinearLayout
            android:id="@+id/detail_infor_right"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="5dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/N_X"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:textColor="#FF00FF00"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/N_Y"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
		android:layout_marginLeft="60dp"
                android:textColor="#FF00FF00"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/N_Z"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:textColor="#FF00FF00"
                android:textSize="24sp" />

		<!--
		android:scrollbars="vertical"
		android:singleLine="false"
		-->

		<ScrollView 
		    android:layout_width="fill_parent"   
		    android:layout_height="wrap_content"
		    android:padding="6dip"   
		    android:scrollbarAlwaysDrawVerticalTrack="true">

	            <TextView
        	        android:id="@+id/N_DETAIL"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:textColor="#FF00FF00"
	                android:textSize="13sp" />
		</ScrollView>

    	</LinearLayout>
    </LinearLayout>
	

    <RelativeLayout
        android:id="@+id/layout_2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:gravity="bottom" >
        

    	<Button
    	    android:id="@+id/button_calib"
    	    android:layout_width="match_parent"
    	    android:layout_height="80dp"
    	    android:layout_alignParentTop="true"
    	    android:layout_gravity="bottom"
    	    android:gravity="center"
    	    android:text="@string/Calibrator"
    	    android:textSize="24sp" />
    	
    </RelativeLayout>
</LinearLayout>
